<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd" >
<hibernate-configuration>
<session-factory>
	<property name="myeclipse.connection.profile">sql2005</property>
	<property name="connection.url">
		jdbc:sqlserver://localhost:1433;databaseName=qhits309_02
	</property>
	<property name="connection.username">sa</property>
	<property name="connection.password">sa</property>
	<property name="connection.driver_class">
		com.microsoft.sqlserver.jdbc.SQLServerDriver
	</property>
	<property name="dialect">
		org.hibernate.dialect.SQLServerDialect
	</property>
	<property name="show_sql">true</property>
	<property name="format_sql">true</property>
	<mapping resource="com/centrain/hibernate/model/Person.hbm.xml" />
	<mapping resource="com/centrain/hibernate/model/Student.hbm.xml" />
	<mapping resource="com/centrain/hibernate/model/user.hbm.xml" />
	<mapping resource="com/centrain/hibernate/model/Usersinfo.hbm.xml" />
</session-factory>
</hibernate-configuration>
